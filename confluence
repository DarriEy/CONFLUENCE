#!/bin/bash
#
# DEPRECATED: Backward-compatible wrapper for CONFLUENCE
# This script redirects to the new 'symfluence' command
#
# The project has been rebranded from CONFLUENCE to SYMFLUENCE.
# Please update your scripts to use './symfluence' instead of './confluence'
#

echo "⚠️  WARNING: 'confluence' command is deprecated."
echo "   Please use './symfluence' instead."
echo "   The project has been rebranded to SYMFLUENCE."
echo ""

# Find and execute symfluence script
SCRIPT_DIR=$(dirname "$(readlink -f "${BASH_SOURCE[0]}" 2>/dev/null || echo "${BASH_SOURCE[0]}")")

if [[ -f "${SCRIPT_DIR}/symfluence" ]]; then
    exec "${SCRIPT_DIR}/symfluence" "$@"
else
    echo "Error: symfluence script not found in ${SCRIPT_DIR}"
    echo "Please ensure symfluence is in the same directory as this script."
    exit 1
fi
